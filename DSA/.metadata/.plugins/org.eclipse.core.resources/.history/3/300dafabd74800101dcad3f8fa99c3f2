//    Array Manipulation (find unique number)
	public static void main(String[] args) {
		int arr[]= {1,2,3,4,2,3,1};
		int len=arr.length;
		Arrays.sort(arr);
		int unique=0;
		for(int i=0;i<len-1;i++) {
			if(arr[i]!=arr[i+1]) {
				unique=arr[i];
				break;
			}
		}
		System.out.println(unique);

	}
		
}
