	private static void reverseArray(int[] arr) {
		int newarr[]=new int[arr.length];
		System.out.print("Reverse Array : ");
		for(int i=arr.length-1;i>=0;i--) {
			int j=0;
			newarr[j]=arr[i];
			System.out.print(newarr[j]+",");
			j--;
			
		}
	}
}
