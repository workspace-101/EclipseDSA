//		Rotate an Array by "K" Step
		RotateArrayByKStep(arr);
		

	}

private static int[] entering_Input_In_An_Array() {
	Scanner cs=new Scanner(System.in);
	System.out.println("Enter the length of array");
	int len=cs.nextInt();
	int arr[]=new int[len];
	for(int i=0;i<len;i++) {
		arr[i]=cs.nextInt();
		
	}
	return arr;
	}

